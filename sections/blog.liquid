
<div class="page-width">
    <div style="padding-top:{{ section.settings.range-top-setting }}px;padding-bottom:{{ section.settings.range-bottom-setting }}px">
       
        <div style="text-align:center">
            <h2 class="font" style="font-size:{{ section.settings.select-setting }}">
                {{ section.settings.text-setting }}
            </h2>
          
        </div>


        <div class="blog-section"> 

          <div class="main-blog">
            {% assign firstarticle = section.settings.article-setting.first %}
             {{ firstarticle.image }}
          </div>
           <div class="secondary-blog"> </div>
          
        </div>

      
    
     

      
    </div>
</div>

{% schema %}
{
    "name": "Blog",
    "class": "blog-cover",
    "settings": [


          {
              "type": "article",
               "id": "article-setting",
              "label": "Select Article"
          },      
      
        {
            "type": "text",
            "id": "text-setting",
            "label": "Enter Text",
            "default": "Blog"
        },
        {
            "type": "range",
            "id": "range-top-setting",
            "min": 20,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding Top",
            "default": 20
        },
        {
            "type": "range",
            "id": "range-bottom-setting",
            "min": 20,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding-Bottom",
            "default": 20
        },
        {
            "type": "select",
            "id": "select-setting",
            "label": "Select Font Size",
            "options": [
                {
                    "value": "15px",
                    "label": "small"
                },
                {
                    "value": "25px",
                    "label": "medium"
                },
                {
                    "value": "35px",
                    "label": "large"
                },
                {
                    "value": "45px",
                    "label": "extra large"
                }
            ]
        }
    ],

    "presets": [
      {
        "name": "Blog"
      }
        ]

        
}
{% endschema %}

