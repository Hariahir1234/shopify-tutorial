<div class="page-width">
    <div style="padding-top: {{ section.settings.range-top-setting }}px; padding-bottom: {{ section.settings.range-bottom-setting }}px">
       
        <div style="text-align: center;">
            <h2 class="font" style="font-size: {{ section.settings.select-setting }}">
                {{ section.settings.text-setting }}
            </h2>
        </div>

        <div class="blog-collection">
            {% for article in blogs[section.settings.blog-handle].articles %}
                <div class="blog-post">
                    {% if article.image %}
                        <a href="{{ article.url }}">
                            <img src="{{ article.image | image_url: width: 500 }}" alt="{{ article.title }}">
                        </a>
                    {% endif %}
                    <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
                    <p>{{ article.excerpt | truncate: 100 }}</p>
                    <a href="{{ article.url }}" class="read-more">Read More</a>
                </div>
            {% endfor %}
        </div>

    </div>
</div>

{% schema %}
{
    "name": "Blog Section",
    "class": "blog-cover",
    "settings": [
        {
            "type": "text",
            "id": "text-setting",
            "label": "Enter Section Title",
            "default": "Latest Blog Posts"
        },
        {
            "type": "blog",
            "id": "blog-handle",
            "label": "Select Blog"
        },
        {
            "type": "range",
            "id": "range-top-setting",
            "min": 20,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding Top",
            "default": 20
        },
        {
            "type": "range",
            "id": "range-bottom-setting",
            "min": 20,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding Bottom",
            "default": 20
        },
        {
            "type": "select",
            "id": "select-setting",
            "label": "Select Font Size",
            "options": [
                { "value": "15px", "label": "Small" },
                { "value": "25px", "label": "Medium" },
                { "value": "35px", "label": "Large" },
                { "value": "45px", "label": "Extra Large" }
            ]
        }
    ],
    "presets": [
        {
            "name": "Blog Section"
        }
    ]
}
{% endschema %}
