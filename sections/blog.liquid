
<div class="page-width">
    <div style="padding-top:{{ section.settings.range-top-setting }}px;padding-bottom:{{ section.settings.range-bottom-setting }}px">
       
        <div style="text-align:center">
            <h2 class="font" style="font-size:{{ section.settings.select-setting }}">
                {{ section.settings.text-setting }}
            </h2>
        </div>

       <div class="blog-section">
        {% for block in section.blocks %}
            {% assign blog = blogs[block.settings.blog-setting] %}

              <div class="main-blog">  

                    {% if blog.title == 'Main Blog' %}
                       {% for article in blog.articles  %}
                          <a href="{{ article.url }}">
                            {{ article.image | image_url: width: master | image_tag }}
                            <h3>{{ article.title }}</h3>
                            <p>{{ article.content}}</p>
                          </a>
                          {% endfor %}
                      
                    {% endif %}  
              </div>
                   <div class="side-blog">  

                    {% if blog.title == 'Side Blog' %}
                       {% for article in blog.articles  %}
                          <a href="{{ article.url }}">
                            {{ article.image | image_url: width: master | image_tag }}
                            <h3>{{ article.title }}</h3>
                            <p>{{ article.content}}</p>
                          </a>
                          {% endfor %}
                      
                    {% endif %}  
              </div>
          
             
          {% endfor %}
      </div>

    </div>
</div>


{% schema %}
{
    "name": "Blog",
    "class": "blog-cover",
    "settings": [

      
      
        {
            "type": "text",
            "id": "text-setting",
            "label": "Enter Text",
            "default": "Blog"
        },
        {
            "type": "range",
            "id": "range-top-setting",
            "min": 20,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding Top",
            "default": 20
        },
        {
            "type": "range",
            "id": "range-bottom-setting",
            "min": 20,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Padding-Bottom",
            "default": 20
        },
        {
            "type": "select",
            "id": "select-setting",
            "label": "Select Font Size",
            "options": [
                {
                    "value": "15px",
                    "label": "small"
                },
                {
                    "value": "25px",
                    "label": "medium"
                },
                {
                    "value": "35px",
                    "label": "large"
                },
                {
                    "value": "45px",
                    "label": "extra large"
                }
            ]
        },
        
    ],
    "blocks": [
        { 
          "name":"custom block",
          "type": "custom-block",
          "settings": [
            { 
                "type":"blog",
                "id":"blog-setting",
                "label": "Select Blog"
              }
          ]
        }
    ],
   

    "presets": [
      {
        "name": "Blog"
      }
        ]

        
}
{% endschema %}

