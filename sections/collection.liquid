<!-- Collection Section Schema -->
{%- liquid
  assign selected_collections = section.settings.collections
  assign products_per_collection = section.settings.products_per_collection | default: 4
-%}

<div class="collection-tabs-section" id="collection-section-{{ section.id }}">
  <div class="container">
    
    <!-- Section Heading -->
    {% if section.settings.heading != blank %}
      <div class="section-header text-center">
        <h2 class="section-title">{{ section.settings.heading }}</h2>
        {% if section.settings.description != blank %}
          <p class="section-description">{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <!-- Collection Tabs -->
    <div class="collection-tabs">
      <div class="tab-buttons">
        {% for collection_handle in selected_collections %}
          {% assign collection = collections[collection_handle] %}
          {% if collection and collection.products_count > 0 %}
            <button class="tab-button {% if forloop.first %}active{% endif %}" 
                    data-collection="{{ collection.handle }}"
                    onclick="showCollection('{{ collection.handle }}', '{{ section.id }}')">
              {{ collection.title }}
            </button>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Collection Products -->
      <div class="tab-content">
        {% for collection_handle in selected_collections %}
          {% assign collection = collections[collection_handle] %}
          {% if collection and collection.products_count > 0 %}
            <div class="collection-products {% if forloop.first %}active{% endif %}" 
                 id="collection-{{ collection.handle }}-{{ section.id }}">
              
              <div class="products-grid">
                {% for product in collection.products limit: products_per_collection %}
                  <div class="product-card">
                    <a href="{{ product.url }}" class="product-link">
                      
                      <!-- Product Image -->
                      <div class="product-image">
                        {% if product.featured_image %}
                          <img src="{{ product.featured_image | img_url: '300x300' }}" 
                               alt="{{ product.title }}" 
                               loading="lazy">
                        {% else %}
                          <div class="no-image">
                            <span>No Image</span>
                          </div>
                        {% endif %}
                        
                        <!-- Sale Badge -->
                        {% if product.compare_at_price > product.price %}
                          <span class="sale-badge">Sale</span>
                        {% endif %}
                        
                        <!-- Wishlist Button -->
                        <button class="wishlist-btn" onclick="addToWishlist(event, {{ product.id }})">
                          <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                            <path d="M12 21.35L10.55 20.03C5.4 15.36 2 12.27 2 8.5C2 5.41 4.42 3 7.5 3C9.24 3 10.91 3.81 12 5.08C13.09 3.81 14.76 3 16.5 3C19.58 3 22 5.41 22 8.5C22 12.27 18.6 15.36 13.45 20.03L12 21.35Z" 
                                  stroke="currentColor" stroke-width="2"/>
                          </svg>
                        </button>
                      </div>

                      <!-- Product Details -->
                      <div class="product-details">
                        <h3 class="product-title">{{ product.title }}</h3>
                        
                        <!-- Rating Stars -->
                        <div class="product-rating">
                          {% assign rating = product.metafields.reviews.rating.value | default: 4.5 %}
                          {% assign reviews_count = product.metafields.reviews.rating_count.value | default: 47 %}
                          
                          <div class="stars">
                            {% for i in (1..5) %}
                              {% if i <= rating %}
                                <span class="star filled">★</span>
                              {% else %}
                                <span class="star">★</span>
                              {% endif %}
                            {% endfor %}
                          </div>
                          <span class="reviews-count">{{ reviews_count }} reviews</span>
                        </div>

                        <!-- Pricing -->
                        <div class="product-price">
                          <span class="current-price">From Rs. {{ product.price | money_without_currency }}</span>
                          {% if product.compare_at_price > product.price %}
                            <span class="original-price">Rs. {{ product.compare_at_price | money_without_currency }}</span>
                          {% endif %}
                        </div>

                        <!-- Choose Button -->
                        <button class="choose-btn" onclick="quickView(event, {{ product.id }})">
                          Choose
                        </button>
                      </div>
                    </a>
                  </div>
                {% endfor %}
              </div>

              <!-- View All Button -->
              {% if collection.products_count > products_per_collection %}
                <div class="view-all-container">
                  <a href="{{ collection.url }}" class="view-all-btn">
                    View All
                  </a>
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
.collection-tabs-section {
  padding: 60px 0;
  background: #fff;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.section-header {
  margin-bottom: 40px;
}

.section-title {
  font-size: 2.5rem;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
}

.section-description {
  font-size: 1.1rem;
  color: #666;
  max-width: 600px;
  margin: 0 auto;
}

/* Tab Buttons */
.tab-buttons {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-bottom: 40px;
  flex-wrap: wrap;
}

.tab-button {
  padding: 12px 24px;
  border: 2px solid #ddd;
  background: #fff;
  color: #666;
  font-size: 16px;
  font-weight: 500;
  border-radius: 25px;
  cursor: pointer;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.tab-button:hover {
  border-color: #C4A484;
  color: #C4A484;
}

.tab-button.active {
  background: #C4A484;
  border-color: #C4A484;
  color: white;
}

/* Tab Content */
.tab-content {
  position: relative;
}

.collection-products {
  display: none;
}

.collection-products.active {
  display: block;
}

/* Products Grid */
.products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 30px;
  margin-bottom: 40px;
}

.product-card {
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  background: #fff;
}

.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px rgba(0,0,0,0.15);
}

.product-image {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
  background: #f8f8f8;
}

.product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-card:hover .product-image img {
  transform: scale(1.05);
}

.no-image {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  background: #f0f0f0;
  color: #999;
}

.sale-badge {
  position: absolute;
  top: 12px;
  left: 12px;
  background: #ff4444;
  color: white;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
}

.wishlist-btn {
  position: absolute;
  top: 12px;
  right: 12px;
  background: rgba(255,255,255,0.9);
  border: none;
  border-radius: 50%;
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  color: #666;
}

.wishlist-btn:hover {
  background: white;
  color: #ff4444;
  transform: scale(1.1);
}

/* Product Details */
.product-details {
  padding: 20px;
}

.product-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-rating {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 12px;
}

.stars {
  display: flex;
  gap: 2px;
}

.star {
  color: #ddd;
  font-size: 16px;
}

.star.filled {
  color: #ffd700;
}

.reviews-count {
  font-size: 14px;
  color: #666;
}

.product-price {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 15px;
}

.current-price {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.original-price {
  font-size: 14px;
  color: #999;
  text-decoration: line-through;
}

.choose-btn {
  width: 100%;
  background: #C4A484;
  color: white;
  border: none;
  padding: 12px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  cursor: pointer;
  transition: background 0.3s ease;
}

.choose-btn:hover {
  background: #b8956f;
}

/* View All Button */
.view-all-container {
  text-align: center;
}

.view-all-btn {
  display: inline-block;
  padding: 12px 30px;
  border: 2px solid #C4A484;
  color: #C4A484;
  text-decoration: none;
  border-radius: 25px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.view-all-btn:hover {
  background: #C4A484;
  color: white;
}

/* Responsive */
@media (max-width: 768px) {
  .section-title {
    font-size: 2rem;
  }
  
  .products-grid {
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 20px;
  }
  
  .tab-buttons {
    gap: 8px;
  }
  
  .tab-button {
    padding: 10px 20px;
    font-size: 14px;
  }
}
</style>

<script>
function showCollection(collectionHandle, sectionId) {
  // Hide all collections
  const allCollections = document.querySelectorAll(`#collection-section-${sectionId} .collection-products`);
  allCollections.forEach(collection => {
    collection.classList.remove('active');
  });
  
  // Show selected collection
  const selectedCollection = document.getElementById(`collection-${collectionHandle}-${sectionId}`);
  if (selectedCollection) {
    selectedCollection.classList.add('active');
  }
  
  // Update tab buttons
  const allButtons = document.querySelectorAll(`#collection-section-${sectionId} .tab-button`);
  allButtons.forEach(button => {
    button.classList.remove('active');
  });
  
  const activeButton = document.querySelector(`#collection-section-${sectionId} .tab-button[data-collection="${collectionHandle}"]`);
  if (activeButton) {
    activeButton.classList.add('active');
  }
}

function addToWishlist(event, productId) {
  event.preventDefault();
  event.stopPropagation();
  
  // Add your wishlist logic here
  console.log('Added to wishlist:', productId);
  
  // Visual feedback
  const btn = event.currentTarget;
  btn.style.color = '#ff4444';
  
  // You can add AJAX call to add product to wishlist
  // fetch('/cart/add.js', { method: 'POST', ... })
}

function quickView(event, productId) {
  event.preventDefault();
  event.stopPropagation();
  
  // Add your quick view logic here
  console.log('Quick view for product:', productId);
  
  // You can open a modal or redirect to product page
  // window.open(`/products/${productHandle}`, '_blank');
}
</script>

{% schema %}
{
  "name": "Collection Tabs",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Featured Collections"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description"
    },
    {
      "type": "collection_list",
      "id": "collections",
      "label": "Select Collections",
      "limit": 10
    },
    {
      "type": "range",
      "id": "products_per_collection",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Products per Collection",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Collection Tabs"
    }
  ]
}
{% endschema %}